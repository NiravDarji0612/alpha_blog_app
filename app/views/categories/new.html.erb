<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "shadow-lg p-3 mb-5 rounded", local: true) do |f| %>

                <div class="form-group row">
                    <%= f.label :name, "Category name", class:"col-2 col-form-label"%>    
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder:"Enter a name" %>
                    </div>
                </div>
                <div class="form-group text-center mt-4">
                    <%= f.submit class: "btn btn-outline-success btn-lg"%>
                </div>
            <% end %>
        </div>
    </div>
</div>


