<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow-lg p-3 mb-5 rounded", local: true) do |f| %>

                <div class="form-group row">
                    <%= f.label :username, class:"col-2 col-form-label"%>    
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder:"Enter your username" %>
                    </div>
                </div>
                <div class="form-grop row mt-4">
                    <%= f.label :email, class:"col-2 col-form-label" %>   <br/>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter your email"%>
                    </div>
                </div>  
                <div class="form-grop row mt-4">
                    <%= f.label :password, class:"col-2 col-form-label" %>   <br/>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Choose your password"%>
                    </div>
                </div>  
                <div class="form-group text-center mt-4">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-success btn-lg")%>
                </div>
            <% end %>
        </div>
    </div>
</div>

