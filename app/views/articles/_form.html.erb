<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow-lg p-3 mb-5 rounded", local: true) do |f| %>

                <div class="form-group row">
                    <%= f.label :title , class:"col-2 col-form-label"%>    
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder:"Title of article" %>
                    </div>
                </div>
                <div class="form-grop row mt-4">
                    <%= f.label :description, class:"col-2 col-form-label" %>   <br/>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder:"Description of article"%>
                    </div>
                </div>  
                <div class="form-group text-center mt-4">
                    <%= f.submit class: "btn btn-outline-success btn-lg"%>
                </div>
            <% end %>
        </div>
    </div>
</div>

